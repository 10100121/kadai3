<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <p>error</p>
      <% end %>
    </ul>
  </div>
 <% end %>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>



 <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>



<% end %>