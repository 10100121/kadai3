<div class = "container">
 <div class ="row">
  <div class="col-lg-4"><%= render 'books/book', book: @book, user: current_user %></div>


<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <p>error</p>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>
<%= flash[:sign] %>
<div class = "container">
 <div class ="row">
<h1>Books</h1>
<div class="col-lg-8">
<table class="table table-hover table-inverse">

<tr>
	<th></th>
	<th>title</th>
	<th>body</th>
</tr>
<% @books.each do |book| %>


<td class="a3">
  <td>
	<%= link_to user_path(book.id) do %>
	<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
<% end %>
</td>
</td>
<tr>
<td class="a3"><%=link_to book.title ,book_path(book.id) %></td>
<td class="a4"><%= book.body %></td>

</tr>
<% end %>
</table>
</div>
</div>
</div>
</div>