<h1>User info</h1>
<%= form_for(@user) do |f| %>

 <% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <p>error</p>
      <% end %>
    </ul>
  </div>
<% end %>

 <h4>name</h4>
    <%= f.text_field :name %>

<h4>image</h4>
     <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

<h4>introduction</h4>
   <%= f.text_area :introduction %>

    <%= f.submit 'Update User' %>

<% end %>

