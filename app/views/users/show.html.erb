<%= render 'books/book', book: @book, user: @user%>
<%= flash[:edit] %>
<%= flash[:notice] %>


<div class="body">
<div class="row">
<div class="col-xs-3">
<div class="col-xs-9">
</div>

<h1>Books</h1>
<table class="table table-hover table-inverse">
	<thead>
